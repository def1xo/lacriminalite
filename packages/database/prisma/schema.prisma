model Product {
  id         Int     @id @default(autoincrement())
  title      String
  slug       String  @unique
  price      Int
  sizeStock  Json?   @db.Json
  images     Json?   @db.Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Order {
  id          Int      @id @default(autoincrement())
  orderNumber String   @unique
  status      String
  totalAmount Int
  shippingCost Int?
  items       OrderItem[]
  userId      Int?
  sdekTracking String?
  paymentId   String?
  expiresAt   DateTime?
  canceledAt  DateTime?
  createdAt   DateTime @default(now())
}


model StaticPage {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  content   String   @db.Text
  updatedAt DateTime @updatedAt
}

model ProductSize {
  id         Int     @id @default(autoincrement())
  productId  Int
  size       String
  quantity   Int
  product    Product @relation(fields: [productId], references: [id])
  @@unique([productId, size])
}
